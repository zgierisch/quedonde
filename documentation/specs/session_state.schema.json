{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/quedonde/session_state.schema.json",
  "title": "SessionState",
  "type": "object",
  "required": [
    "schema_version",
    "session_id",
    "timestamp",
    "structural_version",
    "scope",
    "symbols",
    "confidence"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "session_id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "structural_version": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "object",
      "required": ["subsystems", "files"],
      "additionalProperties": false,
      "properties": {
        "subsystems": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          }
        },
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        }
      }
    },
    "symbols": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["kind", "role", "evidence"],
        "additionalProperties": false,
        "properties": {
          "kind": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "evidence": {
            "type": "object",
            "required": ["fan_in", "fan_out"],
            "additionalProperties": false,
            "properties": {
              "fan_in": {
                "type": "integer",
                "minimum": 0
              },
              "fan_out": {
                "type": "integer",
                "minimum": 0
              },
              "annotations": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 64
                },
                "default": []
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["src", "relation", "dst"],
        "additionalProperties": false,
        "properties": {
          "src": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "relation": {
            "type": "string",
            "enum": [
              "calls",
              "imports",
              "includes",
              "references",
              "annotates"
            ]
          },
          "dst": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          }
        }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["decision", "reason"],
        "additionalProperties": false,
        "properties": {
          "decision": {
            "type": "string",
            "minLength": 1,
            "maxLength": 240
          },
          "reason": {
            "type": "string",
            "minLength": 1,
            "maxLength": 240
          }
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200
      }
    },
    "confidence": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    }
  }
}
